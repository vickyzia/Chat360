@{
    var style = "";
    var clas = "";
    }
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/Scripts/jquery-2.1.4.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>


	<link rel="stylesheet" href="~/fonts/font-awesome.min.css">
		<link rel="stylesheet" href="~/Content/form-elements.css">
    <!-- Plugin CSS -->
    <link rel="stylesheet" href="~/Content/animate.min.css" type="text/css">

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css">
    
    @*<script src="http://cdn.peerjs.com/0.3/peer.js"></script>*@
    <script src="~/Scripts/peer.js"></script>
    <link rel="stylesheet" href="~/Content/classpage.css" type="text/css">
    <link rel="stylesheet" href="~/Content/searchPage.css" type="text/css">
    
</head>
    @if (ViewBag.Title == "Manage Contacts")
    {
        style = "background-color: #797979;";
        clas = "bodyClass";
    }
    else {
        style = "background-color: #f5f5f5; padding-top:51px; height:100%;position:relative;";
    }
    <body id="page-top" class="@clas" style="@style">
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header" >    
                @if (ViewBag.Title == "Manage Contacts") { 
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" href="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button> 
                }          
                <a class="navbar-brand" href="/Home/Home">Chat 360°</a>	

                
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @if (ViewBag.Title == "Manage Contacts") { 
            <ul class="nav nav-tabs navbar-nav">
                    <li class="active" id="contactsLink" >
                        <a href="#">All Contacts</a>	
                    </li>
                    <li id="requestsLink">
                        @if (ViewBag.RequestCount > 0) { 
                        <a href="#">Contact Requests   <span class="badge">@ViewBag.RequestCount</span></a>
                        }
                        else{
                        <a href="#">Contact Requests   <span class="badge"></span></a>
                        }

                    </li>
                    <li id="searchLink" >
                        <a href="#">Add Contacts</a>
                    </li>
                </ul>
                }
			@if (Session["User"] != null && !string.IsNullOrEmpty(Session["User"].ToString()))
                {	
				 <div class="pull-right dropdown">					
					<div class="btn-group dropdownMenu">
					  <p class="btn btn-dropdown" style="line-height:1;" href="#"><i class="fa fa-user fa-fw" ></i> @Session["User"].ToString()</p>
						  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
							<span class="fa fa-caret-down" title="Toggle dropdown menu"></span>
						  </a>
					  <ul class="dropdown-menu">
						<li><a href="@Url.Action("ManageContacts","User")" target="_blank"><i class="fa fa-pencil fa-fw"></i>Manage Contacts</a></li>
						<!--<li><a href="add class/form.html"><i class="fa fa-trash-o fa-fw"></i>Add Class</a></li> -->
						
						<li class="divider"></li>
						<li><a href="@Url.Action("Logout","Account")"><i class="fa fa-ban fa-fw"></i>Logout</a></li>
						
						
					  </ul>
					</div>
					
					
				 </div>
       
                }
			</div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            
            <!-- /.navbar-collapse -->
			
        </div>
        <!-- /.container-fluid -->
    </nav>
    
    @RenderBody()
    

   
</body>
</html>
