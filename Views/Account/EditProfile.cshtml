@model Chat360Client.Models.EditProfileModel
@{
    ViewBag.Title = "Edit Profile";
}
<style type="text/css">
        body{background-color: #797979 !important; height: auto !important; }
        .well{background-color: #ccc !important;}

        .form-horizontal.control-label{ font-weight : bold !important;}
    </style>
<div class="container" style="padding-top: 60px;background-color:white; padding-bottom:20px;">
 <h1 class="page-header">Edit Profile</h1>

  <div class="row">
    <!-- left column -->
    
      @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal",enctype="multipart/form-data"}))
      { 
          <div class="col-md-4 col-sm-6 col-xs-12">
              <div class="text-center">
                  @{
                      var image = "";
                 
                  }
                <img src="@Model.imageUrl" style="height: 200px; width: 200px;" class="avatar img-circle img-thumbnail" alt="avatar">
                <h6>Upload a different photo...</h6>
                <input type="file" name="file" class="text-center center-block well well-sm">
              </div>
            </div>
            <!-- edit form column -->
            <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
              <div class="alert alert-info alert-dismissable" id="infoArea">
                <a class="panel-close close" data-dismiss="alert">×</a> 
                <i class="fa fa-coffee"></i>
                  @if(Model.status == 1){
                    <span>Profile was successfully updated.</span>
                  }
                  else if(Model.status == 2){
                    <span>There was an error updaring profile</span>
                  }
                  else
                  {
                    <span>Place your<strong> new information</strong> in the given holders.</span>                                           
                  }
              </div>
              <h3>Personal info</h3>
          <div class="form-group">
              <label class="col-lg-3 control-label">First name:</label>
              <div class="col-lg-8">
                @Html.TextBoxFor(x => x.firstName, Model.firstName, new { type = "text", @class = "form-control", placeholder = "First Name"})
                @Html.ValidationMessageFor(x => x.firstName, null, new { style="color: red"})

              </div>
            </div>
          <div class="form-group">
              <label class="col-lg-3 control-label">Last name:</label>
              <div class="col-lg-8">
               @Html.TextBoxFor(x => x.lastName, Model.lastName, new { type = "text", @class = "form-control", placeholder = "Last Name" })
               @Html.ValidationMessageFor(x => x.lastName, null, new { style="color: red"})
              </div>
            </div>
          <div class="form-group">
              <label class="col-lg-3 control-label">username:</label>
              <div class="col-lg-8">
                @Html.TextBoxFor(x => x.username, Model.username, new { type = "text", @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(x => x.username, null, new { style="color: red"})
              </div>
           </div>
          <div class="form-group">
          <label class="col-lg-3 control-label">About me:</label>
          <div class="col-lg-8">
              @Html.TextBoxFor(x => x.aboutMe, Model.aboutMe, new { type = "text", @class = "form-control", placeholder = "About Me" })
              @Html.ValidationMessageFor(x => x.aboutMe, null, new { style="color: red"})
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <input class="btn btn-primary" value="Save Changes" type="submit">
            <span></span>
          </div>
        </div>
                    </div>

      }
  </div>
    </div>